<Page
    x:Class="HungryWorm.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HungryWorm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource GameBackgroundColor}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">

        <!--#region Animation-->
        <!--  This hosts dirts  -->
        <GameEnvironment x:Name="UnderView" Background="Transparent" />

        <!--  This hosts the player and game elements  -->
        <GameEnvironment x:Name="GameView" Background="Transparent" />
        <!--#endregion-->

        <!--#region Player health, game Score-->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">

            <!--  Player health  -->
            <Border
                x:Name="PlayerHealthBarPanel"
                Height="40"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                BorderBrush="White"
                BorderThickness="3"
                CornerRadius="5"
                Style="{StaticResource GameUIContainer}">

                <StackPanel
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <!--  Health  -->
                    <Image
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Assets/Images/player1.png" />

                    <!--  Health bar  -->
                    <ProgressBar
                        x:Name="PlayerHealthBar"
                        Width="50"
                        Height="5"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Foreground="Crimson"
                        Maximum="100"
                        Minimum="0"
                        Value="100" />

                </StackPanel>
            </Border>

            <!--  Game Score  -->
            <Border
                x:Name="ScorePanel"
                Height="40"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                BorderBrush="White"
                BorderThickness="3"
                CornerRadius="5"
                Style="{StaticResource GameUIContainer}">
                <StackPanel
                    Margin="3,0,5,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="30"
                        Height="30"
                        Margin="0,2,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Assets/Images/collectible1.png" />
                    <TextBlock
                        Name="ScoreText"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="0"
                        TextAlignment="Left" />
                </StackPanel>
            </Border>

            <TextBlock
                Name="powerUpText"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Right"
                Visibility="Collapsed" />
        </StackPanel>
        <!--#endregion-->

        <!--#region In game message-->
        <StackPanel
            x:Name="InGameMessagePanel"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <TextBlock
                x:Name="InGameMessageText"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />
        </StackPanel>
        <!--#endregion-->

        <!--#region Input border-->
        <Border
            x:Name="InputView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            KeyDown="OnKeyDown"
            PointerPressed="InputView_PointerPressed" />
        <!--#endregion-->

        <!--#region Pause & quit game-->
        <StackPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <!--  Quit game  -->
            <ToggleButton
                x:Name="QuitGameButton"
                Width="50"
                Height="50"
                Margin="5"
                Checked="QuitGameButton_Checked"
                CornerRadius="100"
                Unchecked="QuitGameButton_Unchecked">
                <SymbolIcon Symbol="Pause" />
            </ToggleButton>

            <!--  Confirm quit game  -->
            <Button
                x:Name="ConfirmQuitGameButton"
                Height="50"
                Margin="5"
                Click="ConfirmQuitGameButton_Click"
                Content="Quit Game?"
                Visibility="{x:Bind Path=QuitGameButton.IsChecked, Mode=TwoWay}" />

        </StackPanel>
        <!--#endregion-->

    </Grid>
</Page>
