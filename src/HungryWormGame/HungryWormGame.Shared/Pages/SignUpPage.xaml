<Page
    x:Class="HungryWormGame.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HungryWormGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource GameBackgroundColor}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">

        <!--#region Animation-->
        <!--  This hosts dirts and collectibles  -->
        <GameEnvironment x:Name="UnderView" Background="Transparent" />

        <!--  Fog  -->
        <Border
            Width="{x:Bind Path=UnderView.Width, Mode=OneWay}"
            Height="{x:Bind Path=UnderView.Height, Mode=OneWay}"
            Background="{StaticResource GameBackgroundColor}"
            Opacity="0.5" />

        <!--  This hosts players that do not collide  -->
        <GameEnvironment x:Name="OverView" Background="Transparent" />
        <!--#endregion-->

        <!--#region UI controls-->
        <Border Style="{StaticResource GameUIContainer}">

            <StackPanel
                x:Name="ActionStack"
                Width="315"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <!--  Game logo  -->
                <!--<Image Height="100" Source="ms-appx:///Assets/Images/logo_game.png" />-->

                <!--  Header  -->
                <TextBlock
                    x:Name="SignupPage_Header"
                    Margin="5,10,5,5"
                    FontSize="15"
                    FontWeight="Bold"
                    Text="Welcome to"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <!--  Game name  -->
                <TextBlock
                    x:Name="GameName"
                    Margin="0,0,0,15"
                    FontSize="30"
                    FontWeight="Bold"
                    Text="Sky Way"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <!--  Fullname  -->
                <TextBox
                    x:Name="UserFullNameBox"
                    Margin="5"
                    Header="Enter your full name"
                    TextChanged="UserFullNameBox_TextChanged" />

                <!--  Email  -->
                <TextBox
                    x:Name="UserEmailBox"
                    Margin="5"
                    Header="Enter email"
                    TextChanged="UserEmailBox_TextChanged" />

                <!--  Username  -->
                <TextBox
                    x:Name="UserNameBox"
                    Margin="5"
                    Header="Set a username"
                    TextChanged="UserNameBox_TextChanged" />

                <!--  Password  -->
                <PasswordBox
                    x:Name="PasswordBox"
                    Margin="5"
                    Header="Set a password"
                    KeyDown="PasswordBox_KeyDown"
                    TextChanged="PasswordBox_TextChanged" />

                <!--  Confirm password  -->
                <PasswordBox
                    x:Name="ConfirmPasswordBox"
                    Margin="5"
                    Header="Confirm password"
                    KeyDown="PasswordBox_KeyDown"
                    TextChanged="ConfirmPasswordBox_TextChanged" />

                <!--  I agree  -->
                <CheckBox
                    x:Name="ConfirmCheckBox"
                    Margin="5"
                    Checked="ConfirmCheckBox_Checked"
                    Content="Yes, I agree to the conditions of participation."
                    FontSize="14"
                    Unchecked="ConfirmCheckBox_Unchecked" />

                <!--  Subscribe to newsletters  -->
                <CheckBox
                    x:Name="SubscribeNewsLettersCheckBox"
                    Margin="5"
                    Content="Yes, I would like to subscribe to newsletters."
                    FontSize="14" />

                <!--  Signup button  -->
                <Button
                    x:Name="SignupButton"
                    Height="50"
                    Margin="30,15,30,5"
                    HorizontalAlignment="Stretch"
                    Click="SignupButton_Click"
                    Content="Signup"
                    IsEnabled="False"
                    Tag="ActionButton" />

                <!--  Login Button  -->
                <Button
                    x:Name="LoginToExistingAccountButton"
                    Height="40"
                    Margin="5,0,5,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="LoginToExistingAccountButton_Click"
                    Content="Already have an account?"
                    FontSize="18"
                    Foreground="White"
                    Tag="ActionButton" />

                <!--  Message text  -->
                <TextBlock
                    x:Name="ProgressBarMessageBlock"
                    Margin="5"
                    FontWeight="SemiBold"
                    Foreground="Crimson"
                    TextWrapping="WrapWholeWords"
                    Visibility="Collapsed" />

                <!--  Progress bar  -->
                <ProgressBar
                    x:Name="ProgressBar"
                    Height="5"
                    Foreground="{StaticResource ProgressBarForegroundColor}"
                    IsFocusEngagementEnabled="False"
                    IsIndeterminate="True"
                    IsTabStop="False"
                    ShowError="False"
                    ShowPaused="True" />

            </StackPanel>

        </Border>
        <!--#endregion-->

        <!--#region Go back-->
        <Button
            x:Name="GoBackButton"
            Width="45"
            Height="45"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="GoBackButton_Click"
            CornerRadius="100"
            Style="{StaticResource DefaultButton}">
            <SymbolIcon Symbol="Back" />
        </Button>
        <!--#endregion-->

    </Grid>
</Page>
